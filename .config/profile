CONFIG_DIR=${XDG_CONFIG_HOME:-$HOME/.config}
CACHE_DIR=${XDG_CACHE_HOME:-$HOME/.cache}

export EDITOR=/usr/bin/vim
export VISUAL=$EDITOR

export TERMINAL=/usr/bin/lxterminal
export QT_QPA_PLATFORMTHEME="qt5ct"
export QT_AUTO_SCREEN_SCALE_FACTOR=0
export XDG_CURRENT_DESKTOP=XFCE

export DefaultIMModule=fcitx

export HISTFILE=$CONFIG_DIR/bash/bash_history

export VIMINIT=":source $CONFIG_DIR"/vim/vimrc
#export VIMDOTDIR=$CONFIG_DIR/vim

export INPUTRC=$CONFIG_DIR/readline/inputrc

export LESSKEY=$CONFIG_DIR/less/lesskey
export LESSHISTFILE=$CACHE_DIR/less/history

if [[ -n $BASH_VERSION ]] && [[ -f $CONFIG_DIR/bash/bashrc ]]; then
    . $CONFIG_DIR/bash/bashrc
fi
